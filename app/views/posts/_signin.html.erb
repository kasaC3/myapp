<% if User.all.any?%>
    <%= form_with scope: :signin, url: sessions_path, html: {class: 'd-flex justify-content-end signin-form'} do |f|%>
        <%= f.text_field :signin_name,placeholder: 'signin name', class: 'form-control form-conrtol-sm' %>
        <%= f.text_field :password, placeholder: 'password',class: 'form-control form-conrtol-sm' %>
        <%= f.submit t('.signin'),class: 'btn btn-sm btn-primary' %>
    <%end%>
<% else %>
<div class='d-flex justify-content-end mb-2'>
    <%= link_to t('.signout'),posts_path,class: 'btn btn-sm btn-primary me-2' %>
    <%= link_to t('.signup'),new_user_path,class: 'btn btn-sm btn-secondary'%>
</div>
<%end%>